body
	width 80%
	margin 2em auto
	font-family "Helvetica Neue", Helvetica, Arial, sans-serif

img
	vertical-align middle
	width 16px
	height 16px

input[type='number']
	width 25px
	text-align center
	font-family "Helvetica Neue", Helvetica, Arial, sans-serif

header
	img
		width 50px
		height 70px
		float left
		margin 0 10px 0 0

table
	width 100%
	border solid 2px black

	caption
		background black
		color white
		padding 4px
		text-align left

		.inputs
			margin-left 3em

	col
		&.prediction
			background #eee

	.current
		background #ffff54

	.score
		text-align center

	.team
		white-space nowrap

	.team2
		text-align right
		
#currentMatch
	border solid 3px black
	padding 2em
	margin 2em 0
	text-align center

	table
		border none

		td
			width 33%
			text-align left
		td:nth-child(2)
			text-align center
		td:last-child
			text-align right

	img
		width 32px
		height 32px

	input
		font-size 24px
		width 40px