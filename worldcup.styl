font = Lato, "Helvetica Neue", Helvetica, Arial, sans-serif

body
	width 80%
	margin 2em auto
	font-family font

#login-buttons *
	font-family font !important

img
	vertical-align middle
	width 16px
	height 16px

input[type='number']
	width 25px
	text-align center
	font-family font

header
	img
		width 35px
		height 50px
		float left
		margin 0 10px 0 0

table
	width 100%
	border solid 2px #ccc

	caption
		background #ddd
		color #999
		padding 4px
		text-align left

		b
			color #000

		.inputs
			margin-left 3em

	col
		&.prediction
			background #eee

	thead th
		color #999
		font-size 12px
		background #eee
		padding 3px 0

	tbody td
		white-space nowrap

	.current
		background #ffff54

	.score
		text-align center

	.team2
		text-align right

section
	clear both
	background #eee
	padding 2em
	margin 2em 0
	&:after
		display block
		content "."
		color white
		clear both


#currentMatch
	float left
	width 500px
	text-align center

	table
		border none
		width 500px
		margin 0 auto

		td
			width 33%
			text-align left
		td:nth-child(2)
			text-align center
		td:last-child
			text-align right

	img
		width 32px
		height 32px

	input
		font-size 24px
		width 40px

#leaderboard
	float right
	width 250px