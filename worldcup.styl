font = Lato, "Helvetica Neue", Helvetica, Arial, sans-serif

body
	width 700px
	margin 2em auto
	font-family font
	font-weight 100

#login-buttons *
	font-family font !important

img
	vertical-align middle
	width 16px
	height 16px

input[type='number']
	width 25px
	text-align center
	font-family font
input[disabled]
	color #999
	background #eee
	border solid 1px #ccc

header
	img
		width 35px
		height 50px
		float left
		margin 0 10px 0 0

table
	width 100%
	border solid 2px #ccc

	caption
		background #ddd
		color #999
		padding 4px
		text-align left

		b
			color #000

		.inputs
			margin-left 3em

	col
		&.prediction
			background #eee

	thead th
		color #999
		font-size 12px
		background #eee
		padding 3px 0

	tbody td
		white-space nowrap

	.current
		background #ffff54

	.score
		text-align center

	.code
		display inline-block
		width 40px

	.team1
		text-align right
	.team2
		text-align left

	.team1, .team2
		font-weight 400

section
	background #eee
	margin 2em 0

	&:after
		display block
		content "."
		color white
		clear both
		height 0


#currentMatch
	float left
	width 450px
	text-align center

	table
		border none
		width 500px
		margin 0 auto

		td
			width 33%
			text-align left
		td:nth-child(2)
			text-align center
		td:last-child
			text-align right

	h2
		display inline-block
		border-radius 50px
		background #ccc
		padding 5px

	img
		width 32px
		height 32px

	input
		font-size 24px
		width 40px

#leaderboard
	float right
	width 250px
	margin 0 auto
	text-align center

	ol
		margin 0
		padding 0
		list-style-position inside